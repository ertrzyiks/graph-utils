{
  "compilerOptions": {
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "baseUrl": "../src",
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true
  },
  "include": [
    "../src"
  ],
  "exclude": [
    "../**/*.spec.ts"
  ]
}
